#!/bin/bash

echo -e "Sisesta kuu number:"
read kuu
if [ $kuu -ge 1 -a $kuu -le 2 ]
then
	echo "Praegu on talv"
elif [ $kuu -ge 3 -a $kuu -le 5 ]
then
	echo "Praegu on kevad"
elif [ $kuu -ge 6 -a $kuu -le 8 ]
then
	echo "Praegu on suvi"
elif [ $kuu -ge 9 -a $kuu -le 11 ]
then
	echo "Praegu on s√ºgis"
elif [ $kuu -eq 12 ]
then
	echo "Praegu on talv"
else
	echo "Vale sisend"
fi
